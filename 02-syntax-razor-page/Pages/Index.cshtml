@page "/trang-chu"
@model IndexModel
@{
    ViewData["Title"] = "Home page";
    var xinchao = "<div>Xin chào</div>";
}

<h1 class="display-4 text-danger">Syntax razor page</h1>    
<ul>
    <li>@(5 + 6)</li>
    <li>@Math.PI, Sin(PI/4) la @Math.Sin(Math.PI/4) </li>
    <li>@("<h1>Xin chào các bạn</h1>")</li>
    <li>@xinchao</li>
    <li>@Html.Raw(xinchao)</li>
</ul>


    @{
        var loichao = "lỏ rồi";
        var age = 20;

        void Xinchao(string name){
            var msg = loichao + " " + name;
            <p>@msg</p>
        }
    }

    @if(age > 18){
        <p>Bạn @age tuổi,bạn được truy cập</p>
    }else{
        <p>Nhót</p>
    }

    @{
        Xinchao("Hoang") ;
        var productList = new string[]{"Iphone", "Samsung", "Nokia"};
        foreach(var item in productList){
            <p>@item</p>
        }

        foreach(var item in productList){
            <text>[@item]</text>
        }

        <br/>

        foreach(var item in productList){
            @: [@item]
        }
    }

<p>@loichao</p>